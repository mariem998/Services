{% extends 'template.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="row my-5">
        <div class="col-md-12">
            <div class="my-3 d-flex justify-content-between align-items-center">
                <button type="button" class="btn btn-dark position-relative">
                    Services
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    {{ services|length }}
                <span class="visually-hidden">services</span>
                </span>
                </button>
            </div>
            <div class="row">
                {% if services|length %}
                    {% for service in services %}
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem; height: 100%">
                                {% if service.image %}
                                    <img src="{{ asset('uploads/'~service.image) }}"
                                         alt="{{ service.libelle}}" class="card-img-top ">
                                {% else%}
                                    <img src="{{ asset('uploads/pc.png') }}"
                                         alt="{{ service.libelle }}" class="card-img-top ">
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ service.libelle }}</h5>
                                    <p class="card-text">{{ service.description }}</p>
                                    <h5><span class="text text-danger">{{ service.price }}</span></h5>
                                    <a href="{{ path('service_show', {id: service.id}) }}" class="btn btn-sm btn-primary">
                                        View
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="alert alert-info">
                        No service found!
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
